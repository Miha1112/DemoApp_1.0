<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CardsFragment">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mainCradBlock">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="550px"
            android:id="@+id/defFront"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="400px"
                android:src="@drawable/cards_prev1"
                android:id="@+id/cards_prev1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:layout_below="@id/cards_prev1"
                android:layout_centerHorizontal="true"
                android:text="1000"
                android:textSize="10pt"
                android:id="@+id/byPrev1"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="550px"
            android:layout_toEndOf="@id/defFront"
            android:layout_marginLeft="35dp"
            android:id="@+id/newFront"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="400px"
                android:src="@drawable/cards_prev2"
                android:id="@+id/cards_prev2"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_bg"
                android:layout_below="@id/cards_prev2"
                android:layout_centerHorizontal="true"
                android:text="1000"
                android:textSize="10pt"
                android:id="@+id/byPrev2"/>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>