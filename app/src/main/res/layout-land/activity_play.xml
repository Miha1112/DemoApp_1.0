<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".playActivity">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:id="@+id/menu_btn">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu"
            android:onClick="backToMenuPlay"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/score_bock"
        android:layout_toStartOf="@+id/store_bock"
        android:layout_marginEnd="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/coinView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/money_coin"/>
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/moneyScore"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/coinView"
            android:text="10"
            android:textSize="12pt"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/store_bock"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/store_btn"
            android:src="@drawable/baseline_store_24"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/main_play_block"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/top_card">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cards_1"
                android:src="@drawable/card_back1"
                android:onClick="clickOnCrad"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cards_2"
                android:layout_toEndOf="@id/cards_1"
                android:layout_marginStart="15dp"
                android:src="@drawable/card_back1"
                android:onClick="clickOnCrad"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cards_3"
                android:layout_toEndOf="@id/cards_2"
                android:layout_marginStart="15dp"
                android:src="@drawable/card_back1"
                android:onClick="clickOnCrad"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cards_4"
                android:layout_toEndOf="@id/cards_3"
                android:layout_marginStart="15dp"
                android:src="@drawable/card_back1"
                android:onClick="clickOnCrad"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cards_5"
                android:layout_toEndOf="@id/cards_4"
                android:layout_marginStart="15dp"
                android:src="@drawable/card_back1"
                android:onClick="clickOnCrad"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cards_6"
                android:layout_toEndOf="@id/cards_5"
                android:layout_marginStart="15dp"
                android:src="@drawable/card_back1"
                android:onClick="clickOnCrad"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cards_7"
                android:layout_toEndOf="@id/cards_6"
                android:layout_marginStart="15dp"
                android:src="@drawable/card_back1"
                android:onClick="clickOnCrad"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cards_8"
                android:layout_toEndOf="@id/cards_7"
                android:layout_marginStart="15dp"
                android:src="@drawable/card_back1"
                android:onClick="clickOnCrad"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/top_card"
            android:layout_marginTop="15dp"
            android:id="@+id/center_card">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cards_9"
                android:src="@drawable/card_back1"
                android:onClick="clickOnCrad"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cards_10"
                android:layout_toEndOf="@id/cards_9"
                android:layout_marginStart="15dp"
                android:src="@drawable/card_back1"
                android:onClick="clickOnCrad"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cards_11"
                android:layout_toEndOf="@id/cards_10"
                android:layout_marginStart="15dp"
                android:src="@drawable/card_back1"
                android:onClick="clickOnCrad"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cards_12"
                android:layout_toEndOf="@id/cards_11"
                android:layout_marginStart="15dp"
                android:src="@drawable/card_back1"
                android:onClick="clickOnCrad"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cards_13"
                android:layout_toEndOf="@id/cards_12"
                android:layout_marginStart="15dp"
                android:src="@drawable/card_back1"
                android:onClick="clickOnCrad"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cards_14"
                android:layout_toEndOf="@id/cards_13"
                android:layout_marginStart="15dp"
                android:src="@drawable/card_back1"
                android:onClick="clickOnCrad"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cards_15"
                android:layout_toEndOf="@id/cards_14"
                android:layout_marginStart="15dp"
                android:src="@drawable/card_back1"
                android:onClick="clickOnCrad"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cards_16"
                android:layout_toEndOf="@id/cards_15"
                android:layout_marginStart="15dp"
                android:src="@drawable/card_back1"
                android:onClick="clickOnCrad"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/center_card"
            android:layout_marginTop="15dp"
            android:id="@+id/center_card_second">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cards_17"
                android:src="@drawable/card_back1"
                android:onClick="clickOnCrad"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cards_18"
                android:layout_toEndOf="@id/cards_17"
                android:layout_marginStart="15dp"
                android:src="@drawable/card_back1"
                android:onClick="clickOnCrad"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cards_19"
                android:layout_toEndOf="@id/cards_18"
                android:layout_marginStart="15dp"
                android:src="@drawable/card_back1"
                android:onClick="clickOnCrad"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cards_20"
                android:layout_toEndOf="@id/cards_19"
                android:layout_marginStart="15dp"
                android:src="@drawable/card_back1"
                android:onClick="clickOnCrad"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cards_21"
                android:layout_toEndOf="@id/cards_20"
                android:layout_marginStart="15dp"
                android:src="@drawable/card_back1"
                android:onClick="clickOnCrad"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cards_22"
                android:layout_toEndOf="@id/cards_21"
                android:layout_marginStart="15dp"
                android:src="@drawable/card_back1"
                android:onClick="clickOnCrad"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cards_23"
                android:layout_toEndOf="@id/cards_22"
                android:layout_marginStart="15dp"
                android:src="@drawable/card_back1"
                android:onClick="clickOnCrad"
                />
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/cards_24"
                android:layout_toEndOf="@id/cards_23"
                android:layout_marginStart="15dp"
                android:src="@drawable/card_back1"
                android:onClick="clickOnCrad"
                />
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>