<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/default_bg"
    android:layout_height="match_parent"
    android:id="@+id/main_layout_setting"
    tools:context=".SettingsActivity">
    <RelativeLayout
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_rectsngle"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/menu_btn">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/menu"
            android:id="@+id/back_to_menu"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="300dp"
        android:id="@+id/main_settings"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="#7F595959"
        android:layout_centerVertical="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/sound_block">

            <TextView
                android:id="@+id/sound_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="10pt"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:text="Sound" />

            <Switch
            android:id="@+id/switch_sound"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_below="@id/sound_block"
            android:id="@+id/card_block"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/count_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="10pt"
                android:layout_marginTop="10dp"
                android:text="Cards count:" />

            <Spinner
            android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_below="@id/card_block"
            android:id="@+id/music_block"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/music_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10pt"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:text="Music" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_music"/>
        </RelativeLayout>


        <Button
            android:id="@+id/privacy"
            android:layout_below="@+id/music_block"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Privacy Policy" />

    </RelativeLayout>


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_id">
    </com.google.android.gms.ads.AdView>

</RelativeLayout>